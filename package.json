{
  "private": true,
  "scripts": {
    "build": "mix --production",
    "dev": "mix watch",
    "global-install": "find . -name 'package.json' -not -path '*/node_modules/*' -not -path '*/wordpress/*' -execdir npm i \\;",
    "global-build": "find . -name 'package.json' -not -path '*/node_modules/*' -not -path '*/wordpress/*' -execdir npm run build \\;",
    "sync": "rsync -avzp --exclude='uploads' --exclude='.DS_Store' ./public ./vendor",
    "publish": "npm run global-build && npm run sync"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "laravel-mix": "^6.0.31",
    "resolve-url-loader": "^4.0.0",
    "sass": "^1.42.1",
    "sass-loader": "^12.1.0"
  },
  "browserslist": [
    ">0.25%",
    "not ie 11",
    "not op_mini all"
  ]
}
